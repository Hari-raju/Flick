<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Flick" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <!-- Background color -->
        <item name="backgroundTint">#262626</item>

        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="viewBg">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="vectorColor">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="textColors" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="imageColor">
        <item name="tint">@color/white</item>
    </style>
</resources>